<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itemi_type_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Вид"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_shpi_title"
        app:layout_constraintWidth_percent=".25"/>

    <TextView
        android:id="@+id/itemi_shpi_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ШПИ"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/itemi_type_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_from_title"
        app:layout_constraintWidth_percent=".25"/>

    <TextView
        android:id="@+id/itemi_from_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Откуда"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/itemi_shpi_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_to_title"
        app:layout_constraintWidth_percent=".25"/>

    <TextView
        android:id="@+id/itemi_to_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Куда"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/itemi_from_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_act_title"
        app:layout_constraintWidth_percent=".25"/>

    <TextView
        android:id="@+id/itemi_act_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Акт"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/itemi_to_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent=".25"/>

    <TextView
        android:id="@+id/itemi_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:maxLines="1"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/itemi_type_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_shpi" />

    <TextView
        android:id="@+id/itemi_shpi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:maxLines="1"
        app:layout_constraintTop_toBottomOf="@id/itemi_type"
        app:layout_constraintLeft_toRightOf="@id/itemi_type_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_from" />

    <TextView
        android:id="@+id/itemi_from"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/itemi_shpi"
        app:layout_constraintLeft_toRightOf="@id/itemi_type_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_to" />

    <TextView
        android:id="@+id/itemi_to"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/itemi_from"
        app:layout_constraintLeft_toRightOf="@id/itemi_type_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itemi_act" />

    <TextView
        android:id="@+id/itemi_act"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:maxLines="1"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/itemi_to"
        app:layout_constraintLeft_toRightOf="@id/itemi_type_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>