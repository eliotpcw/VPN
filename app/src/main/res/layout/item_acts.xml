<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/itema_shpi"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="ШПИ: gfgf"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:gravity="start|center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/itema_type"/>

    <TextView
        android:id="@+id/itema_type"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="Тип: gfgf"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:gravity="start|center"
        app:layout_constraintTop_toBottomOf="@id/itema_shpi"
        app:layout_constraintBottom_toTopOf="@id/itema_reason"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/itema_reason"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="Причина: gfgf"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:gravity="start|center"
        android:paddingTop="2dp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/itema_type"
        app:layout_constraintBottom_toTopOf="@id/itema_violations"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/itema_violations"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Состояние: gfgf"
        android:textColor="@color/colorGray"
        android:paddingTop="2dp"
        android:textSize="15sp"
        android:gravity="start|center"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/itema_reason"
        app:layout_constraintBottom_toTopOf="@id/itema_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/itema_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Коментарии: gfgf"
        android:textColor="@color/colorGray"
        android:textSize="15sp"
        android:gravity="start|center"
        android:paddingTop="2dp"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/itema_violations"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>